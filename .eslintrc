{
  "extends": "airbnb/legacy",
  "env": {
    "browser": true,
    "mocha": true
  },
  "rules": {
    "func-names": 0,
    "block-scoped-var": 2,
    "comma-dangle": [2, "never"],
    "id-length": 0,
    "new-cap": 0,
    "no-unused-expressions": [2, { "allowTernary": true }],
    "no-unused-vars": [2, {"vars": "all", "args": "none"}],
    "valid-jsdoc": 0
  },
}
